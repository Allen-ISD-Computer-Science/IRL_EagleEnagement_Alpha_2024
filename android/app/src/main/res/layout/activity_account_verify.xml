<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".VerifyActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnloginbackgroun"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyleindigo_901">
        <LinearLayout android:id="@+id/linearAccountCreatio"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStyleindigo_901">
            <FrameLayout android:gravity="start"
                android:id="@+id/frameStackloginbackgroun"
                android:layout_height="wrap_content" android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/imageLoginBackgroun"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_gravity="start"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_loginbackgroun" />

                <LinearLayout
                    android:id="@+id/linearColumnsignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="@dimen/_12pxh"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frameStacksignup"
                        android:layout_width="@dimen/_335pxh"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_30sp"
                        android:layout_gravity="start">

                        <ImageView
                            android:id="@+id/img_eagleEngagementLogo"
                            android:layout_width="275dp"
                            android:layout_height="150dp"
                            android:layout_gravity="top|center"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginStart="@dimen/_92pxh"
                            android:layout_marginEnd="@dimen/_92pxh"
                            android:layout_marginBottom="@dimen/_70pxv"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription"
                            android:src="@drawable/cedu_logo" />

                        <TextView
                            android:id="@+id/txtAcctVerify"
                            style="@style/txt_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:layout_marginStart="@dimen/_28pxh"
                            android:layout_marginTop="@dimen/_40pxv"
                            android:layout_marginEnd="@dimen/_28pxh"
                            android:layout_marginBottom="@dimen/_16pxv"
                            android:ellipsize="end"
                            android:gravity="top|center"
                            android:singleLine="true"
                            android:text="@string/lbl_account_verification"
                            tools:text="@string/lbl_account_verification" />

                    </FrameLayout>

                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/linearColumnsignupForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/_12pxh"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="@dimen/_12pxh"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/txtKhulaextrabold16_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/_56pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_email"
                    tools:text="@string/lbl_email" />

                <LinearLayout
                    android:id="@+id/linearColumnEmail"
                    style="@style/groupStyleindigo_700cornerRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/inputVerifyEmail"
                        style="@style/txtKhulaextrabold24_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_50pxh"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/_50pxh"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:inputType="textEmailAddress"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtToken"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_verification_code"
                    style="@style/txtKhulaextrabold16_2" tools:text="@string/lbl_verification_code"/>
                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearColumnVerifyCode"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStyleindigo_700cornerRadius">

                    <EditText
                        android:id="@+id/inputVerifyCode"
                        style="@style/txtKhulaextrabold24_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_50pxh"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/_50pxh"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:inputType="text"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtPassword"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_password"
                    style="@style/txtKhulaextrabold16_2" tools:text="@string/lbl_password"/>
                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearColumnPassword"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStyleindigo_700cornerRadius">
                    <EditText
                        android:id="@+id/inputVerifyPassword"
                        style="@style/txtKhulaextrabold24_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_50pxh"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/_50pxh"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:inputType="textPassword"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>

                <TextView android:ellipsize="end"
                    android:id="@+id/txtPasswordConfirm"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@string/lbl_confirm_password"
                    style="@style/txtKhulaextrabold16_2" tools:text="@string/lbl_confirm_password"/>
                <LinearLayout android:gravity="center_horizontal"
                    android:id="@+id/linearColumnPasswordConfirm"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical" style="@style/groupStyleindigo_700cornerRadius">
                    <EditText
                        android:id="@+id/inputVerifyConfirmPassword"
                        style="@style/txtKhulaextrabold24_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_50pxh"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="@dimen/_50pxh"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:inputType="textPassword"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCreateAcct"
                    style="@style/btnSolidRounded"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_61pxv"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_11pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_11pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_create_account"
                    android:textAllCaps="false"
                    tools:text="@string/lbl_create_account" />
            </LinearLayout>
            <ImageView android:id="@+id/imageLock"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_36pxh"
                android:layout_marginEnd="@dimen/_68pxh"
                android:layout_marginStart="@dimen/_68pxh"
                android:layout_marginTop="@dimen/_186pxv"
                android:layout_width="@dimen/_33pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_lock_white_a700"
                tools:ignore="ContentDescription" tools:src="@drawable/img_lock_white_a700"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSupport"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_68pxh"
                android:layout_marginStart="@dimen/_68pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_support"
                style="@style/txtKhulaextrabold15" tools:text="@string/lbl_support"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
