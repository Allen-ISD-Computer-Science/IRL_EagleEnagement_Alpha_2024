<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ForgotPasswordActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnloginbackgroun"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStyleindigo_901">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearPasswordRecove"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStyleindigo_901">
            <FrameLayout android:gravity="start"
                android:id="@+id/frameStackloginbackgroun"
                android:layout_height="@dimen/_350pxv" android:layout_width="match_parent">
                <ImageView android:id="@+id/imageLoginBackgroun"
                    android:layout_gravity="start"
                    android:layout_height="@dimen/_350pxh"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" android:src="@drawable/img_loginbackgroun"/>
                <LinearLayout
                    android:id="@+id/linearColumnpasswordrecove"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_12pxh"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="match_parent" android:orientation="vertical">
                    <FrameLayout
                        android:id="@+id/frameStackpasswordrecove"
                        android:layout_gravity="start"
                        android:layout_marginHorizontal="@dimen/_30sp"
                        android:layout_height="@dimen/_254pxv" android:layout_width="@dimen/_335pxh">
                        <TextView android:ellipsize="end"
                            android:gravity="top|center"
                            android:id="@+id/txtPasswordRecove"
                            android:layout_gravity="bottom|center"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_16pxv"
                            android:layout_marginEnd="@dimen/_28pxh"
                            android:layout_marginStart="@dimen/_28pxh"
                            android:layout_marginTop="@dimen/_16pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@string/msg_password_recove"
                            style="@style/txt_1" tools:text="@string/msg_password_recove"/>
                        <ImageView
                            android:id="@+id/img_eagleEngagementLogo"
                            android:layout_width="275dp"
                            android:layout_height="150dp"
                            android:layout_gravity="top|center"
                            android:layout_marginHorizontal="50dp"
                            android:layout_marginStart="@dimen/_92pxh"
                            android:layout_marginEnd="@dimen/_92pxh"
                            android:layout_marginBottom="@dimen/_70pxv"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/cedu_logo" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtEmail"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_56pxh"
                        android:layout_marginStart="@dimen/_56pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:text="@string/lbl_email"
                        style="@style/txtKhulaextrabold16_2" tools:text="@string/lbl_email"/>
                    <LinearLayout android:gravity="center_horizontal"
                        android:id="@+id/linearColumnemail"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_55pxh"
                        android:layout_marginStart="@dimen/_56pxh"
                        android:layout_width="match_parent"
                        android:orientation="vertical" style="@style/groupStyleindigo_700cornerRadius">
                        <EditText
                            android:id="@+id/inputForgotPWEmail"
                            style="@style/txtKhulaextrabold24_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_12pxv"
                            android:layout_marginBottom="@dimen/_12pxv"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:inputType="textEmailAddress"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>
            <TextView android:ellipsize="end"
                android:id="@+id/txtStudentID"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_56pxh"
                android:layout_marginStart="@dimen/_56pxh"
                android:layout_marginTop="@dimen/_21pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_student_id"
                style="@style/txtKhulaextrabold16_2" tools:text="@string/lbl_student_id"/>
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearColumnStudentID"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_55pxh"
                android:layout_marginStart="@dimen/_56pxh"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStyleindigo_700cornerRadius">
                <EditText
                    android:id="@+id/inputForgotPWStudentID"
                    style="@style/txtKhulaextrabold24_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonNext"
                style="@style/btnSolidRounded"
                android:layout_width="@dimen/_192pxh"
                android:layout_height="@dimen/_61pxv"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_11pxv"
                android:singleLine="true"
                android:text="@string/lbl_next"
                android:textAllCaps="false"
                tools:text="@string/lbl_next" />
            <ImageView android:id="@+id/imageLock"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_36pxh"
                android:layout_marginEnd="@dimen/_150pxh"
                android:layout_marginStart="@dimen/_150pxh"
                android:layout_marginTop="@dimen/_293pxv"
                android:layout_width="@dimen/_33pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_lock_white_a700"
                tools:ignore="ContentDescription" tools:src="@drawable/img_lock_white_a700"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSupport"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_150pxh"
                android:layout_marginStart="@dimen/_150pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_support"
                style="@style/txtKhulaextrabold15" tools:text="@string/lbl_support"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
